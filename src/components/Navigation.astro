---
import { SITE_TITLE } from "@/consts";
import ThemeToggle from "./ThemeToggle.astro";

const links = [
    {
        label: "About",
        href: "/about",
    },
    {
        label: "Blog",
        href: "/blog",
    },
];
---

<nav class="w-full border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
            <!-- Brand -->
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="text-xl font-semibold tracking-tight"
                    >{SITE_TITLE}</a
                >
            </div>

            <!-- Desktop links -->
            <div class="hidden md:flex md:items-center md:space-x-6">
                {
                    links.map((link) => (
                        <a
                            href={link.href}
                            class="text-sm font-medium hover:text-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                        >
                            {link.label}
                        </a>
                    ))
                }
                <ThemeToggle client:load/>
            </div>

            <!-- Mobile menu (native details/summary) -->
            <div class="md:hidden">
                <details class="relative">
                    <summary
                        class="list-none flex items-center gap-2 p-2 rounded-md cursor-pointer hover:bg-gray-100"
                    >
                        <svg
                            class="h-6 w-6"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            aria-hidden="true"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                        <span class="sr-only">Open menu</span>
                    </summary>

                    <div
                        class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg py-2 z-20"
                    >
                        {
                            links.map((link) => (
                                <a
                                    href={link.href}
                                    class="block px-4 py-2 text-sm hover:bg-gray-50"
                                >
                                    {link.label}
                                </a>
                            ))
                        }
                    </div>
                </details>
            </div>
        </div>
    </div>
</nav>

