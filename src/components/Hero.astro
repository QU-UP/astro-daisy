---
interface Props {
	title: string;
    subtitle:string;
    content: string;
}


const {title, subtitle, content} = Astro.props
---

<div class="hero bg-base-200 min-h-screen">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <h1 class="text-5xl font-bold">{title}</h1>
      <h3 class="text-xl font-bold">{subtitle}</h1>
      <p class="py-6">
        {content}
      </p>
      <!-- <button class="btn btn-primary">Get Started</button> -->
    </div>
  </div>
</div>